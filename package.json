{
  "name": "brp-bot",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "typecheck": "tsc --noEmit",
    "format": "prettier -w --log-level warn",
    "format:all": "prettier -w --log-level warn .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "deploy": "wrangler deploy",
    "db:migrate": "wrangler d1 migrations apply DB --local",
    "db:migrate:create": "wrangler d1 migrations create DB",
    "db:seed": "wrangler d1 execute DB --local --file='./worker/d1/seed.sql'",
    "db:write": "node --experimental-strip-types scripts/writeToD1FromGoogleSheets.mts",
    "dev": "wrangler dev",
    "start": "wrangler dev",
    "test": "vitest",
    "cf-typegen": "wrangler types",
    "prepare": "husky"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.7.0",
    "@cloudflare/workers-types": "^4.20250214.0",
    "@eslint/js": "^9.20.0",
    "@types/node": "^22.13.4",
    "eslint": "^9.20.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "vitest": "^3.0.6",
    "wrangler": "^3.109.2"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.0",
    "@hono/zod-openapi": "^0.18.3",
    "@line/bot-sdk": "^9.5.3",
    "google-auth-library": "^9.15.1",
    "googleapis": "^144.0.0",
    "hono": "^4.6.20"
  }
}
