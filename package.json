{
  "name": "brp-bot",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "typecheck": "tsc --noEmit",
    "format": "prettier -w --log-level warn",
    "format:all": "prettier -w --log-level warn .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "deploy": "wrangler deploy",
    "db:migrate": "wrangler d1 migrations apply DB --local",
    "db:migrate:create": "wrangler d1 migrations create DB",
    "db:seed": "wrangler d1 execute DB --local --file='./worker/d1/seed.sql'",
    "db:write": "node --experimental-strip-types scripts/writeToD1FromGoogleSheets.mts",
    "dev": "wrangler dev",
    "start": "wrangler dev",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "cf-typegen": "wrangler types",
    "prepare": "husky"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.0",
    "@cloudflare/workers-types": "^4.20250313.0",
    "@eslint/js": "^9.22.0",
    "@types/node": "^22.13.10",
    "@vitest/coverage-istanbul": "3.0.8",
    "eslint": "^9.22.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1",
    "vitest": "^3.0.8",
    "wrangler": "^4.0.0"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.1",
    "@hono/zod-openapi": "^0.19.2",
    "@line/bot-sdk": "^9.7.1",
    "google-auth-library": "^9.15.1",
    "googleapis": "^146.0.0",
    "hono": "^4.7.4"
  }
}
