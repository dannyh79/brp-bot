{
  "name": "brp-bot",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "typecheck": "tsc --noEmit",
    "format": "prettier -w --log-level warn",
    "format:all": "prettier -w --log-level warn .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "deploy": "wrangler deploy",
    "db:migrate": "wrangler d1 migrations apply DB --local",
    "db:migrate:create": "wrangler d1 migrations create DB",
    "db:seed": "wrangler d1 execute DB --local --file='./worker/d1/seed.sql'",
    "db:write": "node --experimental-strip-types scripts/writeToD1FromGoogleSheets.mts",
    "dev": "wrangler dev",
    "start": "wrangler dev",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "cf-typegen": "wrangler types",
    "prepare": "husky"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.10.15",
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.2",
    "@vitest/coverage-istanbul": "3.2.4",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0",
    "vitest": "^3.2.4",
    "wrangler": "^4.54.0"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^0.19.10",
    "@line/bot-sdk": "^10.5.0",
    "google-auth-library": "^10.5.0",
    "googleapis": "^168.0.0",
    "hono": "^4.11.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "workerd"
    ]
  }
}
