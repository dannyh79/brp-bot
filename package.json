{
  "name": "brp-bot",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "typecheck": "tsc --noEmit",
    "format": "prettier -w --log-level warn",
    "format:all": "prettier -w --log-level warn .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "deploy": "wrangler deploy",
    "db:migrate": "wrangler d1 migrations apply DB --local",
    "db:migrate:create": "wrangler d1 migrations create DB",
    "db:seed": "wrangler d1 execute DB --local --file='./worker/d1/seed.sql'",
    "db:write": "node --experimental-strip-types scripts/writeToD1FromGoogleSheets.mts",
    "dev": "wrangler dev",
    "start": "wrangler dev",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "cf-typegen": "wrangler types",
    "prepare": "husky"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.6",
    "@eslint/js": "^9.23.0",
    "@types/node": "^22.13.14",
    "@vitest/coverage-istanbul": "3.0.9",
    "eslint": "^9.23.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0",
    "vitest": "^3.0.9",
    "wrangler": "^4.5.0"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.1",
    "@hono/zod-openapi": "^0.19.2",
    "@line/bot-sdk": "^9.7.3",
    "google-auth-library": "^9.15.1",
    "googleapis": "^148.0.0",
    "hono": "^4.7.5"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "workerd"
    ]
  }
}
